<div class="container">
  <div id="letter-parent-space">
    <div class="row justify-content-end">
      <div class="d-none d-md-flex btn-group col-lg-3 mt-4 mb-0 filter-group" role="group"
           aria-label="Basic example">
        <button type="button"
                class="my-letter-filter letter-list-btn filter btn btn-outline-primary active"
                id="my-letter-filter-btn" data-on-off="true">받은 편지
        </button>
        <button type="button"
                class="miss-letter-filter letter-list-btn filter btn btn-outline-primary active"
                id="miss-letter-filter-btn" data-on-off="true">놓친 편지
        </button>
        <button type="button"
                class="focus-letter-filter letter-list-btn filter btn btn-outline-primary"
                id="focus-letter-filter-btn" data-on-off="false">focus
        </button>
      </div>
    </div>
    <div class="row justify-content-center mt-0">
      <div id="letter-list-space"
           class="row row-cols-1 row-cols-md-3 row-cols-lg-4 justify-content-start mt-0 g-4 p-0">
      </div>
    </div>
  </div>
</div>

{{> layout/pagination}}

{{> contents/letter/letterListModal}}

