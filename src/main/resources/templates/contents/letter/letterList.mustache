<body>

{{> layout/navigation}}

<div class="float-btn-space z-1 filter-group" style="width: 50px;">
  <div class="filter-group">
    <button class="filter btn btn-secondary flb flb-ch z-2 focus-letter-filter"
            id="focus-letter-filter-btn-mb"
            data-on-off="false">
      <i class="bi bi-bookmark-fill justify-content-center align-items-center"
         style="font-size: 23px;"></i>
    </button>
    <button class="btn btn-primary flb z-3" id="flb-root">
      <i class="bi bi-filter justify-content-center align-items-center"
         style="font-size: 25px;"></i>
    </button>
  </div>
</div>

<div class="container">
  <div id="letter-parent-space">
    <div class="row justify-content-end">
      <div class="mb-2">
        <h1 class="text-primary mt-3 mb-0" style="font-family: serif;">Letter List</h1>
        <hr class="mt-1 mb-0">
        <p class="text-primary mt-0 mb-0">내가 읽은 편지 모아보기</p>
      </div>
      <div class="d-flex d-none d-md-flex col-lg-4 justify-content-end mb-1">
        <div class="flex-fill"></div>
        <button class="btn btn-primary filter-icon" data-bs-toggle="collapse"
                data-bs-target="#filter-btn-group" aria-expanded="false"
                aria-controls="filter-btn-group">
          <i class="bi bi-filter justify-content-center align-items-center"
             style="font-size: 20px;"></i>
        </button>
      </div>
    </div>
    <div class="row justify-content-end collapse" id="filter-btn-group">
      <div class="btn-group d-md-flex d-none col-md-6 col-lg-4 mb-1" role="group">
        <button type="button"
                class="focus-letter-filter letter-list-btn filter btn btn-outline-primary"
                id="focus-letter-filter-btn" data-on-off="false">focus
        </button>
      </div>
    </div>
    <div class="row justify-content-center mt-0">
      <div id="letter-list-space"
           class="row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-start mt-0 p-0">
