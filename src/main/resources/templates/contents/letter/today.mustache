  <link href="https://fonts.cdnfonts.com/css/bebas-neue" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
        crossorigin="anonymous">
</head>
<body>

<div id="today-space" class="container" style="margin-top:5%; margin-bottom: 5%">
  <div class="card mb-3 mt-5">
    <div class="row g-0">
      <div class="col-lg-6">
        <img id="today-img" class="img-fluid" style="object-fit: cover;"
             alt="">
        <div class="card-img-overlay p-0">
          <div class="bg-primary text-white text-center h2 py-1" style="width: 108px;">
            Today
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="card-body">
          <div id="today-letter-timer"
               class="d-flex flex-row justify-content-start align-items-center">
            <img id="hourglass" class="me-3" src="/img/alarm.svg" alt="" style="width: 35px">
            <div id="today-timer" class="mt-2"
                 style="font-size: 50px; font-family: Bebas Neue, sans-serif; font-weight: bold;"></div>
          </div>
          <div id="today-letter-title" class="h1 mt-5"></div>
          <div id="today-letter-contents" class=""></div>
        </div>
      </div>
    </div>
  </div>
</div>


<script type="module" src="/js/letter/today/today.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>
</html>